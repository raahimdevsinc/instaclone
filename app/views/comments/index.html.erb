<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Show this comment", post_comment_path(comment.post, comment) %>
    </p>
  <% end %>
</div>

<%= link_to "New comment", new_post_comment_path(@comments.first.post) %>
